div.registration 
    h1.registration__title Регистрация аккаунта
    .registration__info
        include ../text_field/text_field.pug 
        .info__name
            +text-field('text_field__input', 'Имя')
        .info__surname
            +text-field('text_field__input', 'Фамилия').surname
        include ../radio-buttons/radio-buttons.pug
    .registration__born 
        h3 Дата рождения 
        include ../masked text field/masked_text.pug
    .registration__data-entry
        h3 Данные для входа в сервис
        .data-entry__email 
            +text-field('text_field__input', 'Email')
        .data-entry__password 
            +text-field('text_field__input', 'Пароль')
        include ../toggle/toggle.pug
    include ../buttons/button.pug 
    +button('button-pay', 'Перейти к оплате')
    .registration__alt-entry 
        p Уже есть аккаунт на Toxin 
        +button('button-outline', 'Войти')